{
  "name": "search-hub",
  "private": true,
  "version": "1.0.7",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "postbuild": "pnpm copy-dist && pnpm remove-key && pnpm zip-firefox && pnpm zip-code",
    "copy-dist": "copyfiles -u 1 dist/**/* firefox",
    "remove-key": "node scripts/remove-key.js ../firefox/manifest.json web_accessible_resources[0].use_dynamic_url",
    "zip-firefox": "node scripts/zip-folder.js ../firefox ../firefox.zip",
    "zip-code": "node scripts/zip-folder.js .. ../search-hub-code.zip ../.gitignore",
    "theme": "chakra-cli tokens src/theme.ts",
    "theme:watch": "chakra-cli tokens src/theme.ts --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@chakra-ui/system": "^2.6.2",
    "@chakra-ui/theme-tools": "^2.1.2",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@hookform/resolvers": "^3.3.4",
    "@types/chrome": "^0.0.267",
    "@types/firefox-webext-browser": "^120.0.3",
    "framer-motion": "^11.1.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.4",
    "react-icons": "^5.2.1",
    "react-use": "^17.5.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^2.4.1",
    "@chakra-ui/styled-system": "^2.9.2",
    "@crxjs/vite-plugin": "2.0.0-beta.23",
    "@hookform/devtools": "^4.3.1",
    "@types/archiver": "^6.0.2",
    "@types/filesystem": "^0.0.36",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "archiver": "^7.0.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "ignore": "^5.3.1",
    "tsx": "^4.10.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
